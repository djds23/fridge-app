<p id="notice"><%= notice %></p>

<h1>Listing Groceries</h1>

<table>
  <thead>
    <tr>
      <th colspan="3" ></th>
      <th>Name</th>
      <th>Owner</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groceries.each do |grocery| %>
      <tr id="<%= grocery.id %>">
        <td colspan="3">-</td>
        <td><%= grocery.name %></td>
        <td><%= grocery.quantity %></td>
        <td><%= grocery.resident.try(:username) %></td>
        <td colspan="3">+</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grocery', new_grocery_path %>
